<div class="container-fluid">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 center-block" style="display:flex;align-items:center;margin-top:10%;">
            <div class="card">
                <div class="card-header">
                    Git connection configuration
                </div>
                <div class="card-block">
                    <form class="form-horizontal" (ngSubmit)="onSubmit()" #gitSettingsForm="ngForm">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-link"></i>
                                    </span>
                                    <input type="text" id="input3-group1" name="input3-group1" class="form-control" placeholder="Git server address" [(ngModel)]="gitServer.address">
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <input type="text" id="input1-group1" name="input1-group1" class="form-control" placeholder="Username" [(ngModel)]="gitServer.userName">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-key"></i>
                                    </span>
                                    <input type="email" id="input2-group1" name="input2-group1" class="form-control" placeholder="Password" [(ngModel)]="gitServer.password">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-dot-circle-o"></i> Submit</button>
                    @*<button type="reset" class="btn btn-sm btn-danger"><i class="fa fa-ban"></i> Reset</button>*@
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>